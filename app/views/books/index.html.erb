<center>
<h1>Kitaplar</h1>
<img src="http://www.nkfu.com/wp-content/uploads/2010/10/kitap.gif" class="img-circle">
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Kitap</th>
      <th>Yazar</th>
      <th>Açıklama</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Göster', book, class: 'btn btn-success btn-xs' %></td>
        <td><%= link_to 'Düzenle', edit_book_path(book), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Sil', book, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Emin misin?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Kitap Ekle', new_book_path, class: 'btn btn-success btn-xs' %>
| <%= link_to 'Anasayfa', root_path, class: 'btn btn-primary btn-xs' %>
</center>